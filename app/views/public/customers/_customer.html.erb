<div class="customer_information_nav top_customer_information_nav">
  <div class="customer_profile_nav top_customer_profile_nav">
    <%= link_to customer_path(customer.id) do %>
      <%= attachment_image_tag(customer, :image, size: "100x100", format: "jpeg", fallback: "no-image.png", class: "img-circle customer_image_link") %>
    <% end %>
    <h1>
      <strong><%= customer.name %></strong>
    </h1>
    <div class="customer_introduction">
      <span><%= customer.introduction %></span>
    </div>
  </div>
  <ul>
    <li>
      <span>獲得EXP</span>
      <span><%= customer.exp_point %></span>
    </li>
    <li>
      <span>お気に入り獲得数</span>
      <span><%= customer.get_favorites_count %></span>
    </li>
    <li>
      <span>ポジティブな評価</span>
      <% if customer.get_raty != 0 %>
        <span><strong><%= customer.get_raty %></strong>%</span>
      <% else %>
        <span> - </span>
      <% end %>
    </li>
    <li>
      <span>レビュー</span>
      <span><%= customer.get_comments.count %></span>
    </li>
  </ul>
</div>