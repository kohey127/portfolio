<div class="flex_container">
  <div class="flex-item customer_image btn">
    <%= attachment_image_tag(@customer, :image, size: "200x180", format: "jpeg", fallback: "no-image.png", class: "img-circle") %>
    <div class="btn_gray">
      <span>
        <%= link_to  "プロフィールを編集する", edit_information_path %>
      </span>
    </div>
    <div class="btn_green">
      <span>
        <%= link_to  "新規体験登録", new_service_path %>
      </span>
    </div>
  </div>
  <div class="flex-item customer_information">
    <div>
      <h1><strong><%= @customer.name %></strong></h1>
    </div>
    <div>
      <i class="fa fa-map-marker"></i>
      <span><%= @customer.based %></span>
    </div>
    <div>
      <span><%= @customer.introduction %></span>
    </div>
  </div>
  <div class="flex-item customer_status">
    <ul>
      <li>
        <span>獲得EXP</span>
        <span><%= @customer.exp_point %></span>
      </li>
      <li>
        <span>公開中の体験</span>
        <span><%= @services.count %></span>
      </li>
      <li>
        <span>フォロー</span>
      </li>
      <li>
        <span>フォロワー</span>
      </li>
      <li>
        <span>ポジティブな評価</span>
      </li>
      <li>
        <span>レビュー</span>
        <span><%= @comments.count %></span>
      </li>
    </ul>
  </div>
</div>
<div class="section_title">
  <h3>公開中の体験</h3>
  <i class="fas fa-angle-down"></i>
</div>
<% if @services.blank? %> 
  <p>公開中の体験はありません</p>
<% else %>
  <div class="service_flex_container">
    <% @services.each do |service| %>
      <%= render 'public/services/service', service: service %>
    <% end %>
  </div>
<% end %>

<div class="comment">
  <div class="section_title">
    <h3>レビュー</h3>
    <i class="fas fa-angle-down"></i>
  </div>
  <% if @comments.blank? %>
    <p>まだレビューはありません</p>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>投稿日</th>
          <th>体験者</th>
          <th>体験名</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= comment.customer.name %></td>
            <td><%= comment.service.catchphrase %></td>
            <td><%= comment.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>